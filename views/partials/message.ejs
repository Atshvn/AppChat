<% var numberOfTrue = 0 %>
 
<% for(var i = 0; i < chat.length; i++) {
      if(chat[i].body.isRead === false){
          numberOfTrue = numberOfTrue + 1
      }
} %>


<a href="#" style="text-decoration: none;"  data-toggle="dropdown" >
    <i class="fa fa-commenting-o" aria-hidden="true" style="color: white; font-size: 20px;"></i>
    <% if(numberOfTrue !== 0) {%>
    <span class="label label-primary nav-label-icon" style="color: white;" id=""><%= numberOfTrue %></span>
    <% } else { %>
    <span class="label label-primary nav-label-icon" style="color: white;" id="">5</span>
    <% } %>
</a>
<ul class="dropdown-menu dmenu xx">
    <li>
        <div class="navbar-login">
            <div class="col-md-12">
                <div class="row">
                    <div class="dropdown-tag">
                        <h3 class="text-center dropdown-tag-head">
                            Message
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <% if(chat.length > 0) {%>
                <% _.forEach(chat, function(val) { %>
                <% if(user.username !== val.body.senderName) {%>
                <a style="text-decoration: none; color: #434343;" data-value="<%= val.body._id %>" id="messageLink"
                    href="/chat/<%= _.lowerCase(val.body.senderName) %>.<%= _.lowerCase(user.username) %>">
                    <div class="row">
                        <div class="col-md-3">
                            <p class="text-center">
                                <img src="https://chatappaltp.s3.amazonaws.com/<%= val.body.sender.userImage %>"
                                    class="rounded-circle img-responsive dropdown-img" />
                            </p>
                        </div>
                        <div class="col-md-9 pleft-0">
                            <div class="row">
                                <div class="col-md-12 textRow">
                                    <div class="col-md-12" id="textRow">
                                        <p class="text-left drop-name">
                                            <% if(user.username !== val.body.receiverName) {%>
                                            <strong><%= val.body.receiverName %></strong>
                                            <% } else { %>
                                            <strong><%= val.body.senderName %></strong>
                                            <% } %>
                                        </p>
                                        <input type="hidden" name="chatId" id="chatId" value="<%= val.body._id %>">
                                        <%= val.body.message %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <hr class="dropdown-divider" />
                <% } else if(user.username === val.body.senderName){ %>
                <a style="text-decoration: none; color: #434343" data-value="<%= val.body._id %>" id="messageLink"
                    href="/chat/<%= _.lowerCase(val.body.receiverName) %>.<%= _.lowerCase(user.username) %>">
                    <div class="row">
                        <div class="col-md-3">
                            <p class="text-center">
                                <img src="https://chatappaltp.s3.amazonaws.com/<%= val.body.receiver.userImage %>"
                                    class="rounded-circle img-responsive dropdown-img" />
                            </p>
                        </div>
                        <div class="col-md-9 pleft-0">
                            <div class="row">
                                <div class="col-md-12 textRow">
                                    <div class="col-md-12" id="textRow">
                                        <p class="text-left drop-name">
                                            <% if(user.username !== val.body.receiverName) {%>
                                            <strong><%= val.body.receiverName %></strong>
                                            <% } else { %>
                                            <strong><%= val.body.senderName %></strong>
                                            <% } %>
                                        </p>
                                        <input type="hidden" name="chatId" id="chatId" value="<%= val.body._id %>">
                                        <%= val.body.message %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <hr class="dropdown-divider" />
                <% } %>
                <% })%>
                <% }else {%>
                    <p class="d-flex justify-content-center"> No Chat...</p>
                    <% } %>

            </div>
        </div>
    </li>

</ul>