<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Profile | A L T P</title>

    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../css/simple-sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/profile.css">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light " id="sidebar-wrapper" style=" border-left:none !important;">
            <div style="width: 100px !important; height: 64px !important; background-color: #6ad2eb ;"></div>
            <div class="list-group list-group-flush" style="width: 100px !important; margin-top: 30px;">
                <a href="/home" class="list-group-item list-group-item-action bg-light">Group</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Message</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Friend</a>
                <a href="/settings/profile" class="list-group-item list-group-item-action bg-light">Profile</a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom"
            style="background-color:#6ad2eb  !important; color: white;">
            <a href="/home" style="text-decoration: none; color: white; display: block;"><h1 class="text-center logo m-0">A L T P</h1></a>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @<%= user.username %>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/settings/profile">Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/logout">Log Out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fuild">
                <div class="app">
                    <div class="pt-5">
                        <div class="row pl-5">
                            <div class="col-3 pl-5">
                                <div class="card style=" box-shadow: 0 8px 6px -6px black;"">
                                    <img src="https://chatappaltp.s3.amazonaws.com/lan.jpg" class="card-img-header"  alt="image" />
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                      <div class="image-cover">
                                        <img src="https://chatappaltp.s3.amazonaws.com/<%= user.userImage %>" id="show_img" alt="au" class="img-responsive avatar mx-auto" />
                                      </div>
                                        <p class="name-auth"><%= user.fullname %></p>
                                        <p class="">@<%= user.username %></p>

                                        <a href="/settings/profile" style="text-decoration: none; color: white;" class="btn btn-v-p"><div >Profile</div></a>
                                        <div class="row w-100 mt-3">
                                            <div
                                                class="col-4 d-flex flex-column align-items-center justify-content-center div-r">
                                                <strong>125</strong>
                                                <p>Post</p>
                                            </div>
                                            <div
                                                class="col-4 d-flex flex-column align-items-center justify-content-center div-r">
                                                <strong>12</strong>
                                                <p>Follower</p>
                                            </div>
                                            <div
                                                class="col-4 d-flex flex-column align-items-center justify-content-center">
                                                <strong>25</strong>
                                                <p>Following</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-9 pr-5 pb-5 pr-5">
                                <div class="card" style=" box-shadow: 0 8px 6px -6px black;">
                                    <div class="d-flex flex-row">
                                        <div class="sub-info-select">Profile</div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span id="error" class="text-center mt-3"></span>
                                        <div class="d-flex flex-row">
                                            <input type="text" name="username" id="username" class="form-control m-3"
                                                placeholder="@<%= user.username %>" />
                                        </div>
                                        <div class="d-flex flex-row">
                                            <input type="text" name="fullname" id="fullname" class="form-control m-3"
                                                placeholder="Full Name" />
                                        </div>
                                        <div class="d-flex flex-row">
                                            <input type="text" id="address" name="address" class="form-control m-3"
                                                placeholder="Address" />
                                        </div>
                                        <div class="d-flex flex-row">
                                            <div class="pl-4 form-check form-check-inline">
                                                <label class="form-check-label"
                                                    style=" color:#868f97 !important; font-size: large;"
                                                    for="">Gender: </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender" value="Male"
                                                    id="gender">
                                                <label class="form-check-label" for="">Male</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    value="Female" id="gender">
                                                <label class="form-check-label" for=" ">Female</label>
                                            </div>
                                        </div>
                                        <div class="m-3">
                                            <label style="color:#868f97 !important; font-size: large" class=" pl-2">About Me</label><br>
                                            <textarea name="aboutme" id="aboutme" class="form-control input-lg" rows="5"
                                                placeholder="Something..."></textarea>
                                        </div>
                                        <div class="m-3">
                                            <label style=color:#868f97 !important">Add Profile Photo</label><br>
                                            <input type="hidden" id="user-image" value="">
                                            <button class="btn btn-lg add-btn" style="background-color:#6ad2eb !important; color:white" type="button">Add Avatar</button>
                                            <input type="file" class="form-control" name="upload" id="add-input" style="display: none">
                                            <span id="completed" class="t-s"></span>
                                        </div>
                                        <div class="d-flex m-3">
                                            <div class="ml-auto">
                                                <input type="submit" id="profile" value="Save Profile" class="btn btn-lg btn-default btn-block save-profile-btn" name="submit" style="background-color:#6ad2eb  !important; color:white !important">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <!-- Bootstrap core JavaScript -->
        <script src="../vendor/jquery/jquery.min.js"></script>
        <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/js/user/profile.js"></script>

</body>

</html>