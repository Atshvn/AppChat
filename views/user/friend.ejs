<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Home | A L T P</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/simple-sidebar.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/friend.css">
    <link rel="stylesheet" href="../css/groupchat.css">


</head>

<body>
    <div class="d-flex" id="wrapper">
    <%- include('../partials/sidebar.ejs') %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">

         <%- include('../partials/navbar.ejs') %>

            <div class="container-fluid">
                <div class="col-md-12 pt-4 pb-4">
                    <form action="/results/friend" method="post">
                        <div class="form-group ad-30" style="margin-top: 8px;">
                            <div class="input-group search-style">

                                <input type="text" name="name" id="search"
                                    class="form-control new-search-bar search-form-bar" value="">
                                <span class="input-group-btn">
                                    <button class="btn input-btn" id="search-form">Search</button>
                                </span>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-12" >
                    <div class="row">
                        <div class="col-md-9">
                            <% _.forEach(chunks, function(val){ %>
                            <div class="category-list">
                                <div class="row">
                                    <% _.forEach(val, function(val2){ %>
                                    <form action="#" method="post" id="add-fav" >
                                        <div class="item col-md-3">
                                            <a style="text-decoration: none; color: black;"
                                                class="d-flex justify-content-center pt-3"
                                                href="/member/<%= val2.friendName %>">
                                                <div class="card" style="width: 18rem;">
                                                    <img class="card-img-top" id="avatar"
                                                        src="https://chatappaltp.s3.amazonaws.com/<%= val2.friendImg %>"
                                                        alt="Card image cap">
                                                    <div class="card-body ">
                                                        <h5 class="card-title font-weight-bold ">@<%= val2.friendName %></h5>
                                                        <div class="d-flex ">
                                                            <a href="/detailprofile" class="btn mt-3 mr-5 ml-4"
                                                                style="background-color: #81FFEF; color: white;">Chi
                                                                tiết</a>
                                                            <a href="/friend/<%= val2.friendId %>" class="btn mt-3"
                                                                style="background-color: #81FFEF; width: 76px; color: white;">Xóa</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </form>
                                    <% }) %>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                        <div class="col-md-3">
                            <div class="row">
                                <div class="col-md-12 chat-box" style="padding-right: 0px !important;">
                                    <div class="card-container chat-bar">
                                        <div class="card">
                                            <div class="front">
                                                <div class="content main-scroll">
                                                    <div class="main" id="main_scroll">
                                                        <p class="friends" style="margin-bottom:0px;">
                                                            Online Friends <span id="numOfFriends"></span>
                                                        </p>
                                                        <hr style="margin-top:10px" />
                                                            <% if(data.friendsList.length > 0) { %>
                                                                <% _.forEach(data.friendsList, function(value) { %>
                                                                <div class="friend" hidden>@<%= value.friendName %></div>
                                                                <% }) %>
                                                            <% } %>
                                                            <div class="onlineFriends"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/upload.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/group/sendrequest.js"></script>
    <script src="/js/home.js"></script>
    <script src="/js/global.js"></script>
