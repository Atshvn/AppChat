                                    <div class="new_message_head">
                                        <div class="pull-left">
                                            <button style="font-weight: bold; color: #272343; font-size: 25px;"
                                                class="club_name">
                                                <%= groupName %>
                                            </button>
                                        </div>
                                        <div class="pull-right">
                                        </div>
                                    </div>
