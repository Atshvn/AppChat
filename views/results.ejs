<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Home | A L T P</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="css/simple-sidebar.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <%- include('partials/sidebar.ejs') %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom"
            style="background-image: linear-gradient( 135deg, #81FFEF 10%, #F067B4 100%) !important; color: #868f97;">
            <a href="/home" style="text-decoration: none; color:white; display: block;font-weight: bold;">
                <h1 class="text-center logo m-0">A L T P</h1>
            </a>
        
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0" id="reload">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            <%= user.username %>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item text-center" href="/settings/profile">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item " href="/logout"><i class="fa fa-sign-out pr-2"></i>Log Out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

            <div class="container-fluid">
                <div class="col-md-12 pt-4 pb-4">
                    <form action="" method="post">
                        <div class="form-group ad-30" style="margin-top: 8px;">
                            <div class="input-group search-style">

                                <input type="text" name="name" id="search"
                                    class="form-control new-search-bar search-form-bar" value="">
                                <span class="input-group-btn">
                                    <button class="btn input-btn" id="search-form">Search</button>
                                </span>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-12">
                    <input type="hidden" name="name-user" id="name-user" value="<%= user.username %>">
                    <input type="hidden" name="name-image" id="name-image" value="<%= user.userImage %>">
                    
                    <div>
                        <% _.forEach(chunks, function(val){ %>
                        <div class="category-list">
                            <div class="row">
                                <% _.forEach(val, function(val2){ %>
                                <form action="/home" method="post" id="add_group">
                                    <div class="item col-md-3">
                                       <a style="text-decoration: none; color: black;" href="/group/<%= val2.name %>">
                                        <div class="card" style="width: 18rem;">
                                            <img class="card-img-top" src="https://chatappaltp.s3.amazonaws.com/<%= val2.image %>" alt="Card image cap">
                                            <div class="card-body">
                                              <h5 class="card-title">
                                                  <%= val2.name %> <i class="fa fa-users" aria-hidden="true" style="font-size: 13px; color: #868f97; float: right;">  (<%= val2.member.length %>)</i>
                                                </h5>
                                              <p class="card-text"><%= val2.title %></p>
                                              <div>
                                                  <input type="hidden" name="id" id="id" value="<%= val2._id %>">
                                                  <input type="hidden" name="groupName" id="groupName" value="<%= val2.name %>">
                                                <button class="btn mt-3" style="background-color: #6ad2eb; color: white;">Add Group</button>
                                              </div>
                                            </div>
                                          </div>
                                       </a>
                                    </div>
                                </form>
                                <% }) %>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script> 
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/group/sendrequest.js"></script>
    <script src="/js/home.js"></script>
    <script src="/js/global.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>